---
const { navLinks, description = "" } = Astro.props;

import Minicart from "../components/MiniCart.astro";
import Logo from "../assets/logo.png";
---

<footer class="footer sm:footer-horizontal bg-base-200 text-base-content p-10">
  <div class="container mx-auto flex justify-between">
    {
      navLinks?.length ? (
        <nav>
          <ul>
            {navLinks.map((navlink) => (
              <li>
                <a class="btn" href={navlink.url}>
                  {navlink.title}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      ) : (
        ""
      )
    }
    <div>
      <a href="/" class="px-2">
        <img src={Logo.src} alt="Logo" class="h-12" />
      </a>
      <p>{description}</p>
    </div>
    <div>
      <h6 class="footer-title">Your Cart:</h6>
      <Minicart position="bottom" />
    </div>
  </div>
</footer>
