---
const { navLinks, description = "", locale = "en" } = Astro.props;

import Logo from "../assets/logo.png";
---

<footer class="footer sm:footer-horizontal bg-base-200 text-base-content p-10">
  <div class="container mx-auto flex gap-6 md:gap-24 flex-col md:flex-row justify-between">
    {
      Boolean(navLinks?.length) && (
        <nav>
          <h6 class="footer-title">Navigation:</h6>
          <ul>
            {navLinks.map((navlink) => (
              <li>
                <a class="btn" href={navlink.url}>
                  {navlink.title}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      )
    }
    <div class="grow">
      <a href="/" class="px-2 mb-6 btn btn-ghost">
        <img src={Logo.src} alt="Logo" class="h-12" />
      </a>
      <p class="mb-4">All artwork and items &copy; HE Designs. All rights reserved.</p>
      <p class="mb-6"><a class="hover:text-amber-700" href="https://rhedyn.cymru">Website by Rhedyn</a>.</p>
      <ul class="flex flex-row gap-2">
        <li><a href={`/${locale}/privacy/`} class="btn">Privacy</a></li>
        <li><a href={`/${locale}/cookies/`} class="btn">Cookies</a></li>
        <li><a href={`/${locale}/terms/`} class="btn">Terms</a></li>
      </ul>
    </div>
    <div>
      <h6 class="footer-title">Your products:</h6>
      <nav>
        <ul class="w-full flex gap-2 flex-col">
          <li><a class="btn w-full btn-primary" href={`/${locale}/checkout/`}>Checkout now</a></li>
          <li><a class="btn w-full" href={`/${locale}/your-cart/`}>View Your Cart</a></li>
          <li><a class="btn w-full" href={`/${locale}/products/`}>All products</a></li>
        </ul>
      </nav>
    </div>
  </div>
</footer>
